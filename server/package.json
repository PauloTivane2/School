{
    "name": "escola-api",
    "version": "1.0.0",
    "description": "Sistema de gestão escolar com presença",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node -r tsconfig-paths/register dist/server.js",
        "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/server.ts",
        "migrate": "ts-node -r tsconfig-paths/register src/database/runMigrations.ts",
        "migrate:rollback": "ts-node -r tsconfig-paths/register src/database/runMigrations.ts rollback",
        "verify": "node verify-setup.js",
        "test": "jest",
        "lint": "eslint src --ext .ts"
    },
    "dependencies": {
        "bcryptjs": "^3.0.2",
        "dotenv": "^16.0.3",
        "express": "^4.21.2",
        "helmet": "^8.1.0",
        "morgan": "^1.10.1",
        "pg": "^8.11.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.24",
        "@types/helmet": "^0.0.48",
        "@types/morgan": "^1.9.10",
        "@types/node": "^20.0.0",
        "@types/pg": "^8.10.0",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.0.0"
    }
}
